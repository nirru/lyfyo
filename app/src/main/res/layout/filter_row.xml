<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/cardview">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageView" />


        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentRight="true"
            android:background="@color/green"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:gravity="center"
            android:text="3.6"
            android:id="@+id/textView7" />

        <TextView
            android:id="@+id/sl_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 votes"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView7"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Unisex"
            android:id="@+id/textView8"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/textView9"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Anna Nagar,Chennai"
            android:id="@+id/location"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="8dp" />

        <RelativeLayout
            android:id="@+id/rel_offer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/location"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/imageView"
            android:background="@color/login_screen_bg_color">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="%"/>
            
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:alpha="0.2"></View>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_toRightOf="@+id/textView10"
                android:text="offer Available"/>




        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Tony &amp; Spa"
            android:textColor="@android:color/black"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/textView9"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"/>

       

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_location_on_grey"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintRight_toLeftOf="@+id/sl_votes"
            app:layout_constraintLeft_toRightOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="7Km Away"
            android:id="@+id/textView11"
            android:layout_below="@+id/location"
            android:layout_alignParentRight="true"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>
